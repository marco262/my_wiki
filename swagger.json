{
  "swagger": "2.0",
  "info": {
    "title": "5e Wiki API",
    "description": "A sample API that demonstrates how to use Flask-SwaggerUI.",
    "version": "1.0"
  },
  "basePath": "/api",
  "schemes": ["https"],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/dnd/hello": {
      "get": {
        "summary": "Returns a simple greeting message.",
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "Successful response.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/dnd/spell/{class}/{list}": {
      "get": {
        "summary": "Returns a spell list",
        "description": "Takes a class and list as arguments and returns the corresponding spell list",
        "parameters": [
          {
            "name": "class",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The class for which to retrieve the spell list"
          },
          {
            "name": "list",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "The specific spell list to retrieve"
          }
        ],
        "responses": {
          "200": {
            "description": "A spell list",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "List of spells for class and list"
                }
              }
            }
          }
        }
      }
    }
  }
}
